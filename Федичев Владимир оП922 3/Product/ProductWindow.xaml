<Window x:Class="Product.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product"
        mc:Ignorable="d" Style="{StaticResource Windows}"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="2" Grid.RowSpan="1" Fill="#ABCFCE "/>
        <Rectangle Grid.Row="2" Fill="#ABCFCE"/>
        <Rectangle Grid.Column="0" Grid.Row="0" Fill="#546F94"/>
        <Image Source="/Res/Мозаика.png"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="5">
            <Button x:Name="MaterialBtn" Content="Материалы" Margin="5" Click="MaterialBtn_Click"/>
            <Button x:Name="SuppliersBtn" Content="Поставщики" Margin="5" Click="SuppliersBtn_Click"/>
        </StackPanel>
        <WrapPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Click="BackBtn_Click"/>
            <Button x:Name="ForwardBtn" Content="Вперёд" Margin="5" Click="ForwardBtn_Click"/>
        </WrapPanel>
        <Button x:Name="LogOutBtn" Content="Выйти" Grid.Column="1" HorizontalAlignment="Right" Margin="10" Click="LogOutBtn_Click"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.Row="1" Background="Beige"/>
    </Grid>
</Window>
