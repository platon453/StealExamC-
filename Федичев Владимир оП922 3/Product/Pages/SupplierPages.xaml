<Page x:Class="Product.Pages.SupplierPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Product.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SupplierPages">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Поставщик"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="SupplierlList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Background="#435a83">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="5">
                                    <TextBlock Margin="2">
                                         <Run Text="Название: " FontSize="15"/>
                                         <Run Text="{Binding SupplierName}" FontSize="15"/>
                                    </TextBlock>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Margin="2">
                                        <Run Text="Инн: " FontSize="15"/>
                                        <Run Text="{Binding INN}" FontSize="15"/>
                                        </TextBlock>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Margin="2">
                                             <Run Text="Рейтинг: " FontSize="15"/>
                                             <Run Text="{Binding Rating}" FontSize="15"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Margin="2">
                                            <Run Text="Дата начала работы: " FontSize="15"/>
                                            <Run Text="{Binding BeginDate}" FontSize="15"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
