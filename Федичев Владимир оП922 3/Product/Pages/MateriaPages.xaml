<Page x:Class="Product.Pages.MateriaPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Product.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Материалы">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Материалы"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="MaterialList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Background="#435a83">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="5">
                                    <TextBlock Margin="2">
                                        <Run Text="{Binding MaterialType.MaterialType1}" FontSize="15" />
                                        <Run Text=" | "/>
                                        <Run Text="{Binding MaterialName}" FontSize="15"/>
                                    </TextBlock>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Margin="2">
                                            <Run Text="Минимальное колличество: " FontSize="15"/>
                                            <Run Text="{Binding NinQuantity}" FontSize="15"/>
                                            <Run Text="{Binding Unit.Unit1}" FontSize="15"/>
                                        </TextBlock>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Margin="2">
                                                 <Run Text="Количество на складе: " FontSize="15"/>
                                                 <Run Text="{Binding QuantityInStock}" FontSize="15"/>
                                                  <Run Text="{Binding Unit.Unit1}" FontSize="15"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Margin="2">
                                                <Run Text="Цена: " FontSize="15"/>
                                                <Run Text="{Binding Price, StringFormat=C2}" FontSize="15"/> <!-- StringFormat=C2 2 знака после запятой -->
                                                <Run Text="/ Единица изменения: " FontSize="15"/>
                                                <Run Text="{Binding Unit.Unit1}" FontSize="15"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Margin="2">
                                        <Run Text="Стоимость партии: " FontSize="15"/>
                                        <Run Text="{Binding Price, StringFormat=C2}" FontSize="15"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
